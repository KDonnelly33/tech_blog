<h1 class="text-2xl text-blue-500 text-center">Login Form</h1>
  <form id="login-form" class="flex justify-center">
    <div>
      <label for="username-login">Username</label>
      <input type="text" id="username-login" />
    </div>
    <div>
      <label for="password-login">Password</label>
      <input type="password" id="password-login" />
    </div>
    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out" type="submit" id="login-btn">Login!</button>
  </form>
<div>
    <a class="w-full m-5 text-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out" type="button" href="/signup">Sign up instead</a>
</div>
<script src="/js/login.js"></script>